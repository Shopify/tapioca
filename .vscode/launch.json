    "version": "0.2.0",
    "configurations": [
        {
            "type": "rdbg",
            "useBundler": true,
            "name": "Debug current file with rdbg",
            "request": "launch",
            "command": "bin/test",
            "script": "${relativeFile}",
            "args": [],
            "askParameters": true
        },
        {
            "type": "rdbg",
            "useBundler": true,
            "name": "Debug current test with rdbg",
            "request": "launch",
            "command": "bin/test",
            "script": "${relativeFile}:${lineNumber}",
            "args": [],
            "askParameters": true
        },
        {
            "type": "rdbg",
            "useBundler": true,
            "name": "bundle exec tapioca gem",
            "request": "launch",
            "command": "bundle exec ruby",
            "script": "${workspaceFolder}/exe/tapioca",
            "args": ["gem"],
        },
    ]
}
